<label>Share</label>
<ul class="social-icons social" class="cf">
    <li class="facebook-like facebook">
      <div class="hidefest">
        <iframe src="//www.facebook.com/plugins/like.php?href={{ shop.url }}{{ product.url }}&amp;send=false&amp;layout=button_count&amp;width=90&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:90px; height:21px;" allowTransparency="true"></iframe>
      </div>
      <a class="fancy" href="#">
        <i class="fa fa-lg fa-facebook">
          <span></span>
        </i>
        <span>Facebook</span>
      </a>
    </li>


    <li class="tweet-btn twitter">
      <div class="hidefest">
        <a href="//twitter.com/share" class="twitter-share-button" data-url="{{ shop.url }}{{ product.url }}" data-count="none" {% if settings.twitter_account != "" %}data-via="{{ settings.twitter_account }}"{% endif %}>Tweet</a>
        <script src="//platform.twitter.com/widgets.js"></script>
      </div>
      <a class="fancy" href="#">
        <i class="fa fa-lg fa-twitter">
          <span></span>
        </i>
        <span>Twitter</span>
      </a>
    </li>


    <li class="pinterest">
      <div class="hidefest">
        <a href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&media={{ product.featured_image | product_img_url: 'large' }}" class="pin-it-button" count-layout="horizontal">Pin It</a>
        <script src="//assets.pinterest.com/js/pinit.js"></script>
      </div>
      <a class="fancy" href="#">
        <i class="fa fa-lg fa-pinterest">
          <span></span>
        </i>
        <span>Pinterest</span>
      </a>
    </li>


</ul>

<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = '//apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>
