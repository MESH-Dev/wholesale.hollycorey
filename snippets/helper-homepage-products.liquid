<!-- Begin frontpage no products -->
{% if shop.products_count == 0 %}
  <div id="featuredHelper" class="gl-row">
    <div class="gl-col gl-col_6">
      <p>
        <a class="admin-btn-primary" href="/admin/collections?tutorial=Frontpage">Add to collection</a>
        <a class="secondary-action" href="http://docs.shopify.com/manual/your-store/collections?utm_source=default-theme&utm_medium=contextual&utm_campaign=default-theme-products-tooltips-experiment" target="shopify_info">Learn about collections ›</a>
      </p>
      <p>
        <a class="admin-btn-primary" href="/admin/products/new">Add a product</a>
        <a class="secondary-action" href="/products/example-product">View a sample product ›</a>
      </p>
    </div>
    <div class="gl-col gl-col_10">
      <i class="icon-products helper-icon"></i>
      <h3>You haven't added any products yet</h3>
      <p>It takes less than a minute to add a product to your store. Make sure you also add it to the <em>{{ collections[settings.frontpage_collection].title }}</em> collection to see it on the home page.</p>
    </div>
  </div>
{% elsif collections[settings.frontpage_collection].products.size == 0 %}
  <div id="featuredHelper" class="gl-row">
    <div class="gl-col gl-col_6">
      <p><a class="admin-btn-primary" href="/admin/collections?tutorial=Frontpage">Add to collection</a>
        <a class="secondary-action" href="http://docs.shopify.com/manual/your-store/collections?utm_source=default-theme&utm_medium=contextual&utm_campaign=default-theme-products-tooltips-experiment" target="shopify_info">Learn about collections ›</a>
      </p>
    </div>
    <div class="gl-col gl-col_10">
      <i class="icon-collections helper-icon"></i>
      <h3>Almost there...</h3>
      <p>Now add a product to the <em>{{ collections[settings.frontpage_collection].title }}</em> collection to see it on the home page.</p>
    </div>
  </div>
{% endif %}


